DATA IRIS;
  INFILE 'C:\Users\Admin\Desktop\°ø°³°­ÁÂ_14\dataset\Iris.DAT';
   INPUT X1-X4 SPEC_NO @@;
   IF SPEC_NO=1 THEN SPECIES='SETOSA    ';
   IF SPEC_NO=2 THEN SPECIES='VERSICOLOR';
   IF SPEC_NO=3 THEN SPECIES='VIRGINICA ';
   LABEL X1='SEPAL LENGTH'
         X2='SEPAL WIDTH '
