    HAXIS=1 TO 25 BY 1;
RUN;
PROC TREE NOPRINT NCL=3 OUT=OUT;
  COPY X1-X4 SPECIES;
RUN;
PROC FREQ;
  TABLES CLUSTER*SPECIES;
RUN;
PROC CANDISC NOPRINT OUT=CAN;
  CLASS CLUSTER;
  VAR X1-X4;
RUN;
PROC PLOT;
