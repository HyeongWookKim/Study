/* HBAR.SAS : HORIZONTAL BAR CHART */
DATA HEART;
  SET SASUSER.HEART;
RUN;
PROC PRINT DATA=HEART;
RUN;
GOPTION RESET=PATTERN;
GOPTION RESET=LEGEND;
LEGEND1 ACROSS=3 POSITION=(BOTTOM CENTER OUTSIDE);
PROC GCHART;
  HBAR SURVIVE /GROUP=SEX SUBGROUP=SHOCK LEGEND=LEGEND1;
  TITLE1 "Horizontal Bar Chart";
  PATTERN1 V=R1 C=CYAN;
  PATTERN2 V=L3 C=RED;
  PATTERN3 V=X1 C=BLUE;
  PATTERN4 V=X3 C=GRAY;
  PATTERN5 V=L1 C=YELLOW;
  PATTERN6 V=R3 C=BLACK;
RUN;
QUIT;
